            --}}
            <!-- javscript dummy -->
            {{#each data}}
            <div class="card" style="width: 25rem;">

                <img src="/assets/uploads/{{this.img}}" class="card-img-top" alt="..."
                    style="height: 300px; object-fit:cover;">
                <div class="card-body">
                    <h5 class="card-title"><a href="details/{{this.id}}">{{this.title}}</a></h5>
                    <p class="durasi"> {{this.duration}} Bulan </p>
                    <p class="card-text">{{this.desc}}</p>
                    <div class="logo-stack ">
                        {{#each this.tech}}
                        <i class="fa-brands fa-{{this}} fa-2xl"></i>
                        {{/each}}
                    </div>
                    <div class="text-center">
                        <a href="editProject/{{this.id}}" class="btn btn-dark">edit</a>
                        <a href="deleteProject/{{this.id}}" class="btn btn-danger">delete</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>


    </section>



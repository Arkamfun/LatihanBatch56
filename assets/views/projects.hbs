    <!-- section Add Blog Start -->
    <section class="form-container">

        <div class="form-contact">
            <h1>Add My Project</h1>
            {{!-- harus ada enctype --}}
            <form class="form" action="/projects" method="post" enctype="multipart/form-data">

                <label class="form-label" for="tiitle">Project Name</label>
                <input class="form-control" type="text" id="title" name="title">
                <div class="date-container">
                    <div class="start-date">
                        <label class="form-label" for="startDate">Start Date</label>
                        <input class="form-control" type="month" id="startDate" name="startDate">
                    </div>
                    <div class="end-date">
                        <label class="form-label" for="endDate">End Date</label>
                        <input class="form-control" type="month" id="endDate" name="endDate">
                    </div>
                </div>
                <label class="form-label" for="desc"> Description</label>
                <textarea name="desc" class="form-control" id="desc"></textarea>

                <div class="tech-container">
                    <h2 style="text-align: start;">Technologies</h2>
                    <div class="tech-checkbox">
                        <div>

                            <input type="checkbox" id="Javascript" name="tech" value="js">
                            <label for="Javascript">javascript</label>
                        </div>
                        <div>
                            <input type="checkbox" name="tech" id="node" value="node-js">
                            <label for="node">Node Js</label>

                        </div>
                        <div>
                            <input type="checkbox" name="tech" id="vue" value="vuejs">
                            <label for="vue">Vue Js</label>

                        </div>
                        <div>
                            <input type="checkbox" id="react" name="tech" value="react">
                            <label for="react">React Js</label>

                        </div>
                    </div>

                </div>

                <div class="gambar">
                    <label for="image">
                        <input type="file" name="image" id="image" accept="image/*">
                    </label>
                </div>
                <div class="submit">
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
    </section>
    <!-- section add blog finish -->



    <!-- section project list start  -->

    <section class="project-list">
        <div class="title">
            <h2></h2>
        </div>
        <div class="project-card-container" id="cards">


            {{!-- <p>{{this.title}}</p>
            <p>{{this.desc}}</p>
